<% if current_user.try(:admin?) %>
<%= simple_form_for(@country) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
  
 <% else %>
 <p>U bent niet bevoegd voor het aanbrengen van wijzigingen</p>

<%= link_to 'Back', countries_path %> 
<% end %>