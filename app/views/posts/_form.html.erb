<% if current_user.try(:admin?) %>
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<% else %>
 <p>U bent niet bevoegd voor het aanbrengen van wijzigingen</p>

<% end %>