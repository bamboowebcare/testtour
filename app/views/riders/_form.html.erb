<%= simple_form_for(@rider) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :birthday %>
    <%= f.input :country %>
    <%= f.input :tdf %>
    <%= f.input :allround %>
    <%= f.input :climber %>
    <%= f.input :sprinter %>
    <%= f.input :classic %>
    <%= f.input :yellow %>
    <%= f.input :green %>
    <%= f.input :white %>
    <%= f.input :polka %>
    <%= f.association :cycling_team %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
