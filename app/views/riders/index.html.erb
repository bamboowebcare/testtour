<h1>Listing riders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthday</th>
      <th>Country</th>
      <th>Tdf</th>
      <th>Allround</th>
      <th>Climber</th>
      <th>Sprinter</th>
      <th>Classic</th>
      <th>Yellow</th>
      <th>Green</th>
      <th>White</th>
      <th>Polka</th>
      <th>Cycling team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @riders.each do |rider| %>
      <tr>
        <td><%= rider.name %></td>
        <td><%= rider.birthday %></td>
        <td><%= rider.country %></td>
        <td><%= rider.tdf %></td>
        <td><%= rider.allround %></td>
        <td><%= rider.climber %></td>
        <td><%= rider.sprinter %></td>
        <td><%= rider.classic %></td>
        <td><%= rider.yellow %></td>
        <td><%= rider.green %></td>
        <td><%= rider.white %></td>
        <td><%= rider.polka %></td>
        <td><%= rider.cycling_team %></td>
        <td><%= link_to 'Show', rider %></td>
        <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
        <td><%= link_to 'Destroy', rider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

