<div class="row">    
    
    <!-- Main Content Section -->
       
   <div class="large-3 columns">
        <%= render "layouts/googlead" %>
 </div>
 
<h2>Tour de France Ploegen</h2>
<table>
  <thead>
    <tr>
      <th>Ploeg</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @cycling_teams.each do |cycling_team| %>
      <tr>
        <td><h4><%= cycling_team.name %></h4></td>
        <td><%= link_to 'Renners >>', cycling_team %></td>
	  
	  <% if current_user.try(:admin?) %>	
		<td><%= link_to 'Edit', edit_cycling_team_path(cycling_team) %></td>
        <td><%= link_to 'Destroy', cycling_team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  <% end %>	
      
	  </tr>
    <% end %>
  </tbody>
</table>


<br>
<% if current_user.try(:admin?) %>
	<%= link_to 'New Team', new_cycling_team_path %>
<% end %>  

</div>

